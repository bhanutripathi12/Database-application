{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2021",
      "ES2022.Error"
    ],
    "importHelpers": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "outDir": "lib",
    "inlineSourceMap": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript-cached-transpile"
  },
  "include": [
    "src/**/*"
  ]
}
